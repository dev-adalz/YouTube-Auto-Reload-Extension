{
  "manifest_version": 2,
  "name": "YouTube Auto Refresh Fix",
  "version": "1.2",
  "description": "Automatically reloads the YouTube tab when a new video is clicked to fix the 'Video Unavailable' issue. Now includes a Fast Reload toggle.",
  "permissions": [
    "tabs",
    "storage",
    "*://www.youtube.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Auto Refresh Fix"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-auto-refresh@dev-adalz.com",
      "strict_min_version": "57.0"
    }
  }
}
