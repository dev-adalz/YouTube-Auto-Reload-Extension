{
  "manifest_version": 2,
  "name": "YouTube Auto Reload Extension",
  "version": "1.1",
  "description": "Automatically reloads YouTube videos that show Video Unavailable",
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-auto-reload@dev-adalz.com",
      "strict_min_version": "57.0"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [{
    "matches": ["*://www.youtube.com/*"],
    "js": ["content.js"]
  }],
  "permissions": [
    "storage",
    "tabs",
    "*://www.youtube.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
